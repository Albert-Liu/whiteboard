<h1>Editing Task Type</h1>

<% form_for(@task_type) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => "80x10" %>
  </p>
  <p>
    <%= f.label :is_staff %><br />
    <%= f.check_box :is_staff %>
  </p>
  <p>
    <%= f.label :is_student %><br />
    <%= f.check_box :is_student %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<p><%= link_to 'Show', @task_type %> |
<%= link_to 'Back', task_types_path %></p>
