<% content_for :title, 'New Suggestion' %>
<h1>New Suggestion</h1>
<% form_for(@suggestion) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.hidden_field :page %>    
  </p>

  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment, :size => "80x10"  %>
  </p>
  <% if !logged_in?  %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <% end %>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<p><%= link_to 'Back', request.env["HTTP_REFERER"] unless request.env["HTTP_REFERER"].nil? %></p>