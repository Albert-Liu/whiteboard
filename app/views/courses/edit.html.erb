<% content_for :title, 'Edit Course - ' + @course.name %>
<h1>Editing course</h1>

<% form_for(@course) do |f| %>
    <%= f.error_messages %>
  <p>
    <%= f.label :name%><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :short_name, "Abbreviation" %><br />
    <%= f.text_field :short_name %>
  </p>
  <p>
    <%= f.label :number %><br />
    <%= f.text_field :number %>
  </p>
  <p>
    <%= f.label :semester %><br />
    <%= f.select(:semester, ['Fall', 'Spring', 'Summer']) %>
  </p>
  <p>
    <%= f.label :mini %><br />
    <%= f.select(:mini, ['Both', 'A', 'B']) %>
  </p>
  <p>
    <%= f.label :year %><br />
    <%= f.text_field :year, :size => 4 %>
  </p>
  <p>
    <%= f.label :primary_faculty_label %><br />
    <%= f.text_field(:primary_faculty_label, :size => 40)%>
  </p>
  <p>
    <%= f.label :secondary_faculty_label %><br />
    <%= f.text_field(:secondary_faculty_label, :size => 40)%>
  </p>
  <p>
    <%= f.label :remind_about_effort, "Send out emails about effort logs and effort reports?" %><br />
    <%= f.check_box(:remind_about_effort)%>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @course %> |
<%= link_to 'Back', courses_path %>
