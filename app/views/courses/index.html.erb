<% content_for :tablesorter do %>
    <%= javascript_include_tag 'tablesorter' %>
    <%= javascript_include_tag 'tablesorter_filter' %>
    <script type="text/javascript">
        $(document).ready(function () {
                    if ($("#filterBoxOne").prop("disabled") == true) {
                        $('#filterBoxOne').val('');
                        $('#filterBoxOne').removeAttr("disabled");
                        $('#filterBoxOne').focus();
                    }
                    $("#courses_table").tablesorter({widgets:['zebra']})
                            .tablesorterFilter({ filterContainer:$("#filterBoxOne"),
                                filterClearContainer:$("#filterClearOne"),
                                filterColumns:[0, 1, 2, 4],
                                filterCaseSensitive:false
                            });
                    <% if !@all_courses %>
                    $(".all_courses").hide();
                    <% end %>
                }
        );
    </script>
<% end %>

<% if @all_courses %>
    <% content_for :title, 'All courses' %>
    <h1>All Courses</h1>
    <div class="right_link"><%= link_to 'See current semester', :action => "current_semester" %></div>
<% else %>
    <% content_for :title, @semester + " " + @year.to_s + " Courses" %>
    <div>
    <h1><%= @semester %> <%= @year %> Courses</h1>
      <p>For more information about your options
        see <%= link_to "course selections", "http://info.sv.cmu.edu/do/view/#{@semester}#{@year}" %></p>
    </div>
      <div class="right_link"><%= link_to image_tag("/images/curriculum_website.png", :class => "icon", :size=>"108x75", :alt=>"Curriculum website", :title=>"Curriculum website"), "url" %></div>
<% end %>

<div id="courses_for_a_semester">
  <div class="right_link"><%= link_to image_tag("/images/curriculum_website.png", :class => "icon", :size=>"108x75", :alt=>"Curriculum website", :title=>"Curriculum website"), "url" %></div>
  <%= render :partial => "/people/tablesorter_filter_box" %>
  <table id="courses_table" class="tablesorter2">
    <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th class="all_courses">Semester</th>
      <th>Mini</th>
      <th class="all_courses">Year</th>
      <th>&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    <% for course in @courses %>
        <tr class="tablesorter">
          <td><%= course.number %></td>
          <% if course.curriculum_url.blank? %>
              <td><%= course.display_name %></td>
          <% else %>
              <td><%= link_to course.display_name, course.curriculum_url %></td>
          <% end %>
          <td class="all_courses"><%= h course.semester %></td>
          <td><%= course.mini %></td>
          <td class="all_courses"><%= h course.year %></td>
          <td><%= link_to 'Course Tools', course_path(course) %></td>

        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div id="courses_by_length">
  <div class="right_link"><%= link_to image_tag("/images/curriculum_website.png", :class => "icon", :size=>"108x75", :alt=>"Curriculum website", :title=>"Curriculum website"), "url" %></div>
  <div id="semester_length_courses">
    <table id="semester_length_courses_table" class="cmu_table">
      <thead>
      <tr>
        <th>Semester</th>
      </tr>
      </thead>
      <tbody>
      <% for course in @semester_length_courses %>
          <tr class="tablesorter">
            <% if course.curriculum_url.blank? %>
                <td><%= course.name %></td>
            <% else %>
                <td><%= link_to course.name, course.curriculum_url %></td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <br/>

  <div id="mini_length_courses">
    <table id="mini_b_courses_table" class="cmu_table">
      <thead>
      <tr>
        <th>Mini B</th>
      </tr>
      </thead>
      <tbody>
      <% for course in @mini_b_courses %>
          <tr class="tablesorter">
            <% if course.curriculum_url.blank? %>
                <td><%= course.name %></td>
            <% else %>
                <td><%= link_to course.name, course.curriculum_url %></td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
    <table id="mini_a_courses_table" class="cmu_table">
      <thead>
      <tr>
        <th>Mini A</th>
      </tr>
      </thead>
      <tbody>
      <% for course in @mini_a_courses %>
          <tr class="tablesorter">
            <% if course.curriculum_url.blank? %>
                <td><%= course.name %></td>
            <% else %>
                <td><%= link_to course.name, course.curriculum_url %></td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

</div>


<br/>

<% if can? :upload, Course %>
    <div class="rounded admin">
      <%= admin_image %>
      <span class="instructions">Only certain admin roles can see this information.</span>

      <h2>Upload Roster File</h2>
      <% form_tag '/courses/upload', :multipart => true do %>
          <%= file_field_tag "file" %>
          <%= submit_tag "Upload" %>
      <% end %>
      <br/>
    </div>
<% end %>

<% if current_user && current_user.is_admin? %>
    <%= link_to 'New course', new_course_path %>
    <br/>
    <br/>
<% end %>