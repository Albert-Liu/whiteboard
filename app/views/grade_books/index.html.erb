<%= javascript_include_tag "grade_books.js" %>
<%= javascript_include_tag "sorttable.js" %>
<h1><%=@course.name %></h1>
<div style='width:100%;overflow:scroll'>


  <div id="result"></div>
  <div class="score">
  <table class="cmu_table sortable">
  <tr class="<%= cycle('cmu_table_odd', 'cmu_table_even') %>">
    <th> First Name
      <span id="sorttable_sortfwdind">&nbsp;â–¾ </span>
    </th>
  <th> Last Name </th>
  <% @assignments.each do |assignment| %>
    <th style='max-width:25px; word-wrap:break-word;'><%="#{assignment.name} (#{assignment.maximum_score})"%></th>
  <%end %>
</tr>


   <input type="hidden" id="course_id" value=<%=@course.id%> />
  <% @grade_books.each do |student, gbooks| %>
     <tr class="<%= cycle('cmu_table_odd', 'cmu_table_even') %>">
       <td><%=student.first_name%>
       </td>
        <td><%=student.last_name%></td>
        <% @assignments.each do |assignment|%>
          <% score= (gbooks.has_key?(assignment.id))?(gbooks[assignment.id].score):""%>
          <td><input id="<%= @course.id %>_<%=assignment.id%>_<%=student.id%>" value='<%=score%>' type="text" size="4"/><label style='display:none' value= <%= (gbooks.has_key?(assignment.id))?(gbooks[assignment.id].score):""%></label>
          </td>
        <% end %>
    </tr>
  <%end%>
  </table>

  <div style='padding-top:20px;'>
      <button type="button" id="gradebook_submit">Submit</button>
      <button type="button" id="gradebook_save_draft">Save as Draft</button>
  </div>


</div>
</div>
