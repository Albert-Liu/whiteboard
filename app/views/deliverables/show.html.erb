<% content_for :title, @deliverable.course.name + " Task " + @deliverable.task_number %>
<h1><%= @deliverable.course.name + ", Task " + @deliverable.task_number -%></h1>
<p>
  <b>Description:</b>
  <%=h @deliverable.description %>
</p>

<p>
  <% if @deliverable.is_team_deliverable? %>
    <b>Team Deliverable for team <%= @deliverable.team.name -%></b>
  <% else %>
    <b>Individual Deliverable for <%= @deliverable.creator.human_name -%></b>
  <% end %>
</p>

<p>
  Current Revision:
  <%= link_to @deliverable.current_revision.revision_file_name, @deliverable.current_revision.revision.url %>
</p>

<p>
  Submitted on <%= @deliverable.current_revision.submission_date %>
</p>

<h1>Revision History</h1>

<table  class="twikiTable" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <th>Submission Date</th>
    <th>Deliverable File</th>
    <th>Comments</th>
  </tr>

  <% for revision in @deliverable.revisions %>

  <tr>
    <td><%=h revision.submission_date %></td>
    <td>
        <% if revision.revision_file_name != nil %>
            <%= link_to revision.revision_file_name, revision.revision.url %>
        <% end %>
    </td>
    <td>
      <%=h revision.comment -%>
    </td>
  </tr>
  <% end %>
</table>

<%= link_to 'Edit', edit_deliverable_path(@deliverable) %>
<%= link_to 'Back', deliverables_path %>