<% content_for :title, "Deliverable for " + @deliverable.course.name + " Task " + @deliverable.task_number %>
<h1><%= "Deliverable for " + @deliverable.course.name + ", Task " + @deliverable.task_number -%></h1>

<p>
  <% if @deliverable.is_team_deliverable? %>
    <b>Team Deliverable for team <%= @deliverable.team.name -%></b>
  <% else %>
    <b>Individual Deliverable for <%= @deliverable.creator.human_name -%></b>
  <% end %>
</p>

<p>
  <b>Name:</b>
  <%=h @deliverable.name %>
</p>

<p>
  <b>Current Attachment:</b>
  <%= link_to @deliverable.current_attachment.attachment_file_name, @deliverable.current_attachment.attachment.url %>
  <% if @current_user.is_student? %>
      (<%= link_to 'Upload New Attachment', edit_deliverable_path(@deliverable) %>)
  <% end %>
</p>

<p>
  <b>Submitted on:</b> <%= format_time_string(@deliverable.current_attachment.submission_date) %>
</p>

<h1>Feedback</h1>
<p>
  <b>File:</b>
  <% unless @deliverable.feedback_file_name.nil? %>
      <%= link_to @deliverable.feedback_file_name, @deliverable.feedback.url %>
  <% else %>
      None
  <% end %>
  <% if @current_user.is_staff? %>
      (<%= link_to 'Update Feedback', deliverable_feedback_path(@deliverable) %>)
  <% end %>
</p>
<p>
  <b>Comments:</b>
  <% if @deliverable.feedback_comment.nil? or @deliverable.feedback_comment == "" %>
     None
  <% else %>
      <%=h @deliverable.feedback_comment %>
  <% end %>
</p>

<h1>Attachment Version History</h1>

<table  class="twikiTable" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <th>Submission Date</th>
    <th>Deliverable File</th>
    <th>Comments</th>
  </tr>

  <% for version in @deliverable.attachment_versions %>

  <tr class=<%= cycle('twikiTableOdd', 'twikiTableEven')%> >
    <td><%=h format_time_string(version.submission_date) %></td>
    <td>
        <% if version.attachment_file_name != nil %>
            <%= link_to version.attachment_file_name, version.attachment.url %>
        <% end %>
    </td>
    <td>
      <%=h version.comment -%>
    </td>
  </tr>
  <% end %>
</table>
<%= link_to 'Back to deliverable list', my_deliverables_path(@deliverable.creator) %>


