<% reset_cycle %>
<%= javascript_include_tag "jquery.tablesorter.js" %>
<script>
  $(document).ready(function(){
    $(".sortable").tablesorter();
  });
</script>
<table class="twikiTable sortable" cellpadding="0" cellspacing="0" width="685">
    <thead>
  <tr>
    <% unless skip_course_column %>
        <th>Course</th>
    <% end %>
    <th>Task</th>
    <th>Owner</th>
    <th>Latest Deliverable</th>
    <th>Deliverable Graded?</th>
    <%if current_user.is_staff? %>
      <th>Grade Published?</th>
    <%end%>
    <th>Grade Recieved</th>
    <td>Actions</td>
    <!--
        <th>File</th>
    -->
  </tr>
    </thead>

  <% deliverables.each do |deliverable| %>
      <tr class=<%= cycle('twikiTableOdd', 'twikiTableEven') %>>
        <% unless skip_course_column %>
            <% if deliverable.course %>
                <td><%= h deliverable.course.name %></td>
            <% else %>
                <td>&nbsp;</td>
            <% end %>
        <% end %>
        <td><%= h deliverable.assignment.task_number %></td>
        <td><%= deliverable.owner_name %></td>
        <% latest_attachment = deliverable.attachment_versions.first %>
        <% unless latest_attachment.attachment_file_name.nil? %>
            <td><%= link_to deliverable.assignment.name, latest_attachment.attachment.url %></td>
        <% else %>
            <td><%= deliverable.assignment.name %></td>
        <% end %>


        <% grade=Grade.get_grade(deliverable.assignment.id,current_user.id) %>
        <td>
          <% if deliverable.has_feedback? %>
              Yes
          <% else %>
              No
          <% end %>
        </td>
        <%if current_user.is_staff? %>
          <td><%= (!grade.nil? && grade.is_student_visible?)?"Yes":"No" %></td>
        <%end%>
        <td>
        <%unless (grade.nil? || !grade.is_student_visible) %>
            <%= grade.score.to_s %>
        <% end %>
        </td>
        
        <% if current_user.is_student %>
          <td><%= link_to 'View History and Feedback', deliverable %></td>
        <%else%>
          <td><%= link_to 'Give Grades', deliverable %></td>
        <%end%>
        <!--
      <td>
          <% if deliverable.current_attachment != nil and deliverable.current_attachment.attachment_file_name != nil %>
              <%= link_to deliverable.current_attachment.attachment_file_name, deliverable.current_attachment.attachment.url %>
          <% end %>
      </td>
-->
      </tr>
  <% end %>
</table>
